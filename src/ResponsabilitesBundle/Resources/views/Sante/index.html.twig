{% extends 'ResponsabilitesBundle::layout.html.twig' %}

{% trans_default_domain 'ResponsabilitesBundle' %}

{% block title %}{{ 'sante.index.title'|trans }} ‒ {{ parent() }}{% endblock %}

{% block resp_body %}
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>{{ 'sante.index.header'|trans }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p>
				{# description de la responsabilité #}
				{{ 'sante.index.description.chapeau'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'sante.index.description.forme.head'|trans }}</h5>
			<p>
				{{ 'sante.index.description.forme.content'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'sante.index.description.prevention.head'|trans }}</h5>
			<p>
				{{ 'sante.index.description.prevention.content'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'sante.index.description.secourisme.head'|trans }}</h5>
			<p>
				{{ 'sante.index.description.secourisme.content'|trans|bbcode_filter('all') }}
			</p>
			{#<ul class="list-group">
				{# liste des pages du site utiles # }
				{#<a href="#" class="list-group-item"></a># }
			</ul>#}
		</div>
		<div class="col-lg-2 alert alert-danger">
			{{ 'sante.index.warning'|trans|bbcode_filter('all') }}
		</div>
	</div>
{% endblock %}
