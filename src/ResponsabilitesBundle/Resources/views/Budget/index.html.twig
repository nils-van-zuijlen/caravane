{% extends 'ResponsabilitesBundle::layout.html.twig' %}

{% trans_default_domain 'ResponsabilitesBundle' %}

{% block title %}{{ 'budget.index.title'|trans }} – {{ parent() }}{% endblock %}

{% block resp_body %}
  <div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>{{ 'budget.index.header'|trans }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p>
				{# description de la responsabilité #}
				{{ 'budget.index.description.chapeau'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'budget.index.description.budget.head'|trans }}</h5>
			<p>
				{{ 'budget.index.description.budget.content'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'budget.index.description.fonds.head'|trans }}</h5>
			<p>
				{{ 'budget.index.description.fonds.content'|trans|bbcode_filter('all') }}
			</p>
			<ul class="list-group">
				<a href="{{ path('responsabilites_budget_extra_job_view') }}" class="list-group-item">{{ 'budget.index.pages.extra_job'|trans }}</a>
				{% if is_granted('ROLE_CHEF_EQUIPE') or is_granted('ROLE_BUDGET') %}
					<a href="{{ path('responsabilites_budget_extra_job_add') }}" class="list-group-item">{{ 'budget.index.pages.new_extra_job'|trans }}</a>
				{% endif %}
			</ul>
		</div>
		<div class="col-lg-2 alert alert-danger">
			{{ 'budget.index.warning'|trans|bbcode_filter('all') }}
		</div>
  </div>
{% endblock %}
