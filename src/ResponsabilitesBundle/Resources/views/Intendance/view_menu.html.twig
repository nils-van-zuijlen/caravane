{% extends "ResponsabilitesBundle::layout.html.twig" %}

{% block title %}{{ menu.title }} — Menus – {{ parent() }}{% endblock %}

{% block resp_body %}
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>Menu {{ menu.titre }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p>Menu du {{ menu.date|date('d/m/Y à h:i') }}.</p>
			<dl class="dl-horizontal">
				<dt>Entrée</dt>
				<dd>{{ menu.entree }}</dd>
				<dt>Plat</dt>
				<dd>{{ menu.plat }}</dd>
				<dt>Dessert</dt>
				<dd>{{ menu.dessert }}</dd>
			</dl>
			{% if is_granted('ROLE_INTENDANCE') %}
				<div class="btn-group">
					<a href="{{ path('responsabilites_intendance_edit_menu', {slug: menu.slug}) }}" class="btn btn-warning">Modifier</a>
					<a href="{{ path('responsabilites_intendance_delete_menu', {slug: menu.slug}) }}" class="btn btn-danger">Supprimer</a>
				</div>
			{% endif %}
			<hr>
			{% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'menu'~menu.slug} %}
		</div>
	</div>
{% endblock %}
