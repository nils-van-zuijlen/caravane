{% extends 'ResponsabilitesBundle::layout.html.twig' %}

{% trans_default_domain 'ResponsabilitesBundle' %}

{% block title %}{{ 'communication.index.title'|trans }} – {{ parent() }}{% endblock %}

{% block resp_body %}
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>{{ 'communication.index.header'|trans }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p>
				{# description de la responsabilité #}
				{{ 'communication.index.description.chapeau'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'communication.index.description.livre.head'|trans }}</h5>
			<p>
				{{ 'communication.index.description.livre.content'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'communication.index.description.informer.head'|trans }}</h5>
			<p>
				{{ 'communication.index.description.informer.content'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'communication.index.description.temoigner.head'|trans }}</h5>
			<p>
				{{ 'communication.index.description.temoigner.content'|trans|bbcode_filter('all') }}
			</p>
			<ul class="list-group">
				{# liens vers les pages de la responsabilité #}
				{% if is_granted('ROLE_COMMUNICATION') %}
					<a class="list-group-item" href="{{ path('core_actus_add') }}">
						{{ 'communication.index.pages.publier_actu'|trans }}
					</a>
				{% endif %}
			</ul>
		</div>
</div>
{% endblock %}
