{% extends 'ResponsabilitesBundle::layout.html.twig' %}

{% trans_default_domain 'ResponsabilitesBundle' %}

{% block title %}{{ 'materiel.type.view_one.title'|trans({'%nom%': type.nom}) }} â€“ {{ parent() }}{% endblock %}

{% block resp_body %}
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<h3>{{ type.nom }}</h3>
			{% if is_granted('ROLE_MATERIEL') %}
				<div class="btn-group">
					<a href="{{ path('responsabilites_materiel_edit_type', {type: type.id}) }}" class="btn btn-warning">{{ 'materiel.type.view_one.edit'|trans }}</a>
					<a href="{{ path('responsabilites_materiel_delete_type', {type: type.id}) }}" class="btn btn-danger">{{ 'materiel.type.view_one.delete'|trans }}</a>
				</div>
			{% endif %}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">{{ 'materiel.type.view_one.objets'|trans }}</h3>
				</div>
				<div class="list-group">
					{% for objet in type.objets %}
						<a href="{{ path('responsabilites_materiel_view_objet', {objet: objet.id}) }}" class="list-group-item">
							{{ objet.nom }}
						</a>
					{% endfor %}
				</div>
			</div>
			<p><a href="{{ path('responsabilites_materiel_view_all_objet') }}">{{ 'materiel.type.view_one.all_objets'|trans }}</a></p>
		</div>
	</div>
{% endblock %}
