{% extends 'ResponsabilitesBundle::layout.html.twig' %}

{% trans_default_domain 'ResponsabilitesBundle' %}

{% block title %}{{ 'materiel.index.title'|trans }} – {{ parent() }}{% endblock %}

{% block resp_body %}
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>{{ 'materiel.index.header'|trans }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p>
				{# description de la responsabilité #}
				{{ 'materiel.index.description.chapeau'|trans|bbcode_filter('all') }}
			</p>
			<h4>{{ 'materiel.index.description.inventaire.head'|trans }}</h4>
			<p>
				{{ 'materiel.index.description.inventaire.content'|trans|bbcode_filter('all') }}
			</p>
			<h4>{{ 'materiel.index.description.entretien.head'|trans }}</h4>
			<p>
				{{ 'materiel.index.description.entretien.content'|trans|bbcode_filter('all') }}
			</p>
			<h4>{{ 'materiel.index.description.renouvellement.head'|trans }}</h4>
			<p>
				{{ 'materiel.index.description.renouvellement.content'|trans|bbcode_filter('all') }}
			</p>
			<ul class="list-group">
				{# liens vers les pages de la responsabilité #}
				{% if is_granted('ROLE_MATERIEL') %}
					<a href="{{ path('responsabilites_materiel_new_objet') }}" class="list-group-item">
						{{ 'materiel.index.pages.new_objet'|trans }}
					</a>
					<a href="{{ path('responsabilites_materiel_new_type') }}" class="list-group-item">
						{{ 'materiel.index.pages.new_type'|trans }}
					</a>
				{% endif %}
				<a href="{{ path('responsabilites_materiel_view_all_objet') }}" class="list-group-item">
					{{ 'materiel.index.pages.view_objet'|trans }}
				</a>
				<a href="{{ path('responsabilites_materiel_view_all_type') }}" class="list-group-item">
					{{ 'materiel.index.pages.view_type'|trans }}
				</a>
			</ul>
		</div>
	</div>
{% endblock %}
