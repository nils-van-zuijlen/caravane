{% extends "ResponsabilitesBundle::layout.html.twig" %}

{% trans_default_domain 'ResponsabilitesBundle' %}

{% block title %}{{ 'vie_spi.index.title'|trans }} – {{ parent() }}{% endblock %}

{% block resp_body %}
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>{{ 'vie_spi.index.header'|trans }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p>
				{# description de la responsabilité #}
				{{ 'vie_spi.index.description.chapeau'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'vie_spi.index.description.deserts.head'|trans }}</h5>
			<p>
				{{ 'vie_spi.index.description.deserts.content'|trans|bbcode_filter('all') }}
			</p>
			<h5>{{ 'vie_spi.index.description.animation.head'|trans }}</h5>
			<p>
				{{ 'vie_spi.index.description.animation.content'|trans|bbcode_filter('all') }}
			</p>
			<ul class="list-group">
				{# liste des pages de la responsabilité #}
			</ul>
		</div>
	</div>
{% endblock %}
