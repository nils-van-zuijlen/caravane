{% extends 'ResponsabilitesBundle::layout.html.twig' %}

{% trans_default_domain 'ResponsabilitesBundle' %}

{% block title %}{{ 'animation.index.title'|trans }} ‒ {{ parent() }}{% endblock %}

{% block resp_body %}
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>{{ 'animation.index.header'|trans }}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p>
				{# description de la responsabilité #}
				{{ 'animation.index.description.chapeau'|trans|bbcode_filter('all') }}
			</p>
			<h4>{{ 'animation.index.description.materiel.head'|trans }}</h4>
			<p>
				{{ 'animation.index.description.materiel.content'|trans|bbcode_filter('all') }}
			</p>
			<h4>{{ 'animation.index.description.talents.head'|trans }}</h4>
			<p>
				{{ 'animation.index.description.talents.content'|trans|bbcode_filter('all') }}
			</p>
			{#<ul class="list-group">
				{# liens vers les pages de la responsabilité # }
			</ul>#}
		</div>
	</div>
{% endblock %}
