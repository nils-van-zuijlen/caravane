{% extends 'CoreBundle:Actus:layout.html.twig' %}

{% block actus_body %}
	<div class="row">
		<h4 class="col-lg-8 col-lg-offset-2">{{ 'actus.add.header'|trans }}</h4>
	</div>
	<div class="row">
		<div class="col-lg-2">
			<h4>{{ 'actus.add.help.title'|trans }}</h4>
			<ul class="list-inline">
				{% for id in 0..5 %}
					<li>{{ ('actus.add.help.list.' ~ id)|trans }}</li>
				{% endfor %}
			</ul>
		</div>
		<div class="col-lg-10 well">
			{% include "CoreBundle:Actus:form.html.twig" %}
		</div>
	</div>
{% endblock %}
