{% extends 'CoreBundle:Event:layout.html.twig' %}

{% block event_body %}
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			{% if is_granted('ROLE_COMMUNICATION') %}
				<a href="{{ path('core_event_add') }}" class="btn btn-primary">
					{{ 'event.view.by.new'|trans }}
				</a>
			{% endif %}
			<ul>
				{% for event in events %}
					<li>
						<h5>
							<a href="{{ path('core_event_viewone', {slug: event.slug}) }}">
								{{ event.title }}
							</a>
						</h5>
						<p class="help-block">
							{{ 'event.view.by.date'|trans({'%debut%': event.begin|date('d/m/Y à H:i'), '%fin%': event.end|date('d/m/Y à H:i')}) }}
						</p>
					</li>
				{% endfor %}
			</ul>
			{% if is_granted('ROLE_COMMUNICATION') %}
				<a href="{{ path('core_event_add') }}" class="btn btn-primary">
					{{ 'event.view.by.new'|trans }}
				</a>
			{% endif %}
		</div>
	</div>
{% endblock %}
