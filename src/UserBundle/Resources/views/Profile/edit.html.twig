{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'UserBundle' %}

{% block fos_user_content %}
<div class="row">
	{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'col-lg-10 col-lg-offset-1' } }) }}

		{{ form_errors(form) }}

		{{ form_row(form.nom) }}
		{{ form_row(form.prenom) }}
		{{ form_row(form.username) }}
		{{ form_row(form.email) }}
		{{ form_row(form.current_password) }}
		
		{{ form_rest(form) }}

		<div class="form-group">
			<div class="btn-group btn-group-justified">
				<div class="btn-group"><input class="btn btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}" /></div>
				<div class="btn-group">
					<a class="btn btn-default" href="{{ path('fos_user_profile_show') }}">
						{{ 'profile.edit.reset'|trans }}
					</a>
				</div>
			</div>
		</div>

	{{ form_end(form) }}
</div>
{% endblock fos_user_content %}
