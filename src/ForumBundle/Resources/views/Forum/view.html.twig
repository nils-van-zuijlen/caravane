{% extends 'ForumBundle::layout.html.twig' %}

{% block title %}
	{{ forum.title }} – {{ categorie.title }} – {{ parent() }}
{% endblock %}

{% block forum_body %}
	<div class="row">
		<div class="col-lg-11 col-lg-offset-1">
			<h3>
				{{ forum.title }}
			</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<p class="help-block">
				Le {{ forum.datePublication|date('d/m/Y à h:i') }}
			</p>
			<p>
				{{ forum.content|bbcode_filter('comments_filter') }}
			</p>
			{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
				<a
					class="btn btn-primary"
					href="{{ path('forum_forum_edit_forum', {categorie: categorie.slug, slug: forum.slug}) }}"
				>
					Modifier
				</a>
			{% endif %}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			{% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'forum'} %}
		</div>
	</div>
{% endblock %}

